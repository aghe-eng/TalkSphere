<h1>Edit Comment</h1>

<%= simple_form_for [@category, @post, @comment] do |f| %>
  <div class="field">
    <%= f.input :content, as: :text %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Update Comment", class: "btn btn-secondary" %>
  </div>
<% end %>

<%= link_to 'Back to post', category_post_path(@category, @post) %>
