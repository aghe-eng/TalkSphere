<div class="container">
  <div id="<%= dom_id post %>">
    <p>
      <h4><%= @category.name %></h4>
    </p>
    <p><strong>Title:</strong> <%= post.title %></p>
    <p>
      <strong>Content:</strong>
      <%= post.content %>
    </p>
    <p>
      <h5>Comments</h5>
      <ul>
        <% if @comments.present? %>
         <% @post.comments.each do |comment| %>
         <p><strong><%= comment.user.username %>:</strong><%= comment.content %></p>
         <%= link_to "Delete comment", category_post_comments_path(@category, @post, comment), method: :delete, data: { confirm: "Are you sure?" } %>
       <% end %>
        <% else %>
          <p>No comments yet</p>
        <% end %>
      </ul>
    </p>

    <h4><%= pluralize(post.views, "view") %></h4>


    <h4>Post by: <%= link_to post.user.username.capitalize, user_path(post.user) %></h4>
    <h4><%= post.likes.count %> Likes</h4>
</div>
